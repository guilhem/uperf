<?xml version="1.0"?>
<profile name="iPERF">
  <group nprocs="16">
        <transaction iterations="1">
            <flowop type="connect" options="remotehost=$h protocol=tcp
	    wndsz=50k  tcp_nodelay"/>
        </transaction>
        <transaction iterations="10">
            <flowop type="write" options="size=8k rsize=128k"/>
        </transaction>
        <transaction iterations="1">
            <flowop type="disconnect" />
        </transaction>
  </group>

</profile>
